---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Projects - Amaterra Atelier">
  <main class="container mx-auto px-6 pt-32">
    <nav class="flex flex-col items-center text-[12px] py-10">
      <h1 class="text-4xl font-bold dark:text-white hover:text-earth-400 dark:hover:text-earth-300 transition-colors mb-12">PROJECTS</h1>
    </nav>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <a href={`/projects/${project.slug}`} class="group">
          <div class="aspect-square overflow-hidden">
            <img
              src={project.data.image}
              alt={project.data.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="mt-4">
            <h2 class="text-xl font-medium dark:text-white hover:text-earth-400 dark:hover:text-earth-300 transition-colors">{project.data.title}</h2>
            <p class="dark:text-white hover:text-earth-400 dark:hover:text-earth-300 transition-colors mt-2">{project.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>